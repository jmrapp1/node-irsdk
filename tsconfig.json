{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "typeRoots": ["node_modules/@types"],
    "types": ["events", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
